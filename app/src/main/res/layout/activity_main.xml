<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   <ImageView
       android:id="@+id/gambar"
       android:layout_width="300dp"
       android:layout_height="250dp"
       android:src="@drawable/logoo"
       android:layout_marginLeft="50dp"
       android:layout_marginTop="50dp"
       />
    <RelativeLayout
        android:id="@+id/menu"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="90dp"
        android:layout_below="@+id/gambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/btntiket"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/tkt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="35dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="TIKET"/>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/btntiket"
            android:id="@+id/btnsch"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/sch"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="35dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="JADWAL"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/btnsch"
            android:layout_toRightOf="@+id/btntiket"
            android:id="@+id/btnmap"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/map"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="35dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="PETA"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btninfo"
            android:layout_below="@+id/btntiket"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/linup"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="35dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="INFO"/>
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:layout_below="@+id/menu"
        android:id="@+id/btnlogin"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FBBF00"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:text="LOGIN"
        android:textSize="20dp"
        android:layout_height="50dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ellipse"
        android:src="@drawable/ic_hamburger_foreground"/>


</RelativeLayout>
